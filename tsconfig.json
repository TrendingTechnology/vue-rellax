{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2015.collection",
      "dom"
    ],
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  }
}
